{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('css/pokemon-popup.css') }}" rel="stylesheet">
{% endblock %}

{% block body %}
<style>
    body {
        margin: 0;
        padding: 0;
        background-color: #a6c0f8ff;
    }
    table.pokedex {
        width: 100%;
        background-color: #a6c0f8ff;
    }
    table.pokedex th, table.pokedex td {
        border: 2.5px solid #444;
        text-align: center;
        vertical-align: middle;
        height: 40px; 
        position: relative;
        font-size: 20px;
    }
    table.pokedex th {
        background-color: #ffffffff;
        font-weight: bold;
        padding: 10px 8px;
        position: relative;
        vertical-align: middle;
        text-align: center;
    }
    .type-cell {
        min-width: 60px;
    }
    .type-column-inner {
        display: flex;
        flex-direction: column;
        align-items: stretch;
        height: 100%;
        justify-content: center;
    }
    .pokemon-image {
        display: flex;
        align-items: center;   
        justify-content: center; 
        width: 100%;
        max-width: 100px;
        height: 100px;
        object-fit: contain;
        margin: 0 auto;
    }
    img.type-icon {
        width: 100%;
        height: 80px;
        max-width: 100px;
        object-fit: contain;
        display: block;
        margin: 2px auto;
    }
    .evolution-cell {
        max-width: 100px;
        padding: 8px;
        object-fit: contain;
    }
    .evolution-content {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 4px;
    }
    .evolution-sprite {
        display: flex;
        width: 50px;
        height: 50px;
        object-fit: contain;
        max-width: 100px;
        
    }
    .evolution-condition {
        font-size: 0.8em;
        color: #333;
        text-align: center;
        line-height: 1.2;
    }
    .navbar-pokedex {
        width: 100%;
        background: linear-gradient(90deg, #2381c9 0%, #a7dffdff 100%);
        position: sticky;
        top: 0;
        margin: 0;
        padding: 0.8em 1em;
        box-sizing: border-box;
        z-index: 30;
    }
    .pagination-container {
        margin: 1em auto;
        text-align: center;
        background: linear-gradient(90deg, #2381c9 0%, #a7dffdff 100%);
        padding: 1.5em;
        border-radius: 8px;
        max-width: 800px;
    }

    .limit-selector {
        margin-bottom: 1em;
    }

    .limit-selector label {
        color: white;
        font-weight: bold;
        margin-right: 0.5em;
    }

    .limit-selector select {
        border-radius: 7px;
        border: 1px solid #4697ec;
        padding: 5px 8px;
        background: #fff;
        color: #234;
        font-size: 1em;
    }

    .pagination-info {
        color: white;
        margin-bottom: 1em;
        font-size: 0.9em;
    }

    .pagination-nav a, .pagination-nav span {
        display: inline-block;
        padding: 8px 12px;
        margin: 4px 4px;
        border-radius: 5px;
        text-decoration: none;
        color: white;
        background: rgba(255,255,255,0.2);
        border: 1px solid rgba(255,255,255,0.3);
    }

    .pagination-nav a:hover {
        background: rgba(255,255,255,0.3);
    }

    .pagination-nav .current {
        background: #db3133;
        font-weight: bold;
    }

    .pagination-nav .disabled {
        opacity: 0.5;
        pointer-events: none;
    }

    .sort-link {
        color: #333;
        text-decoration: none;
        display: flex;
        align-items: center;
        justify-content: center;
        width: 100%;
        height: 100%;
        padding: 8px;
        transition: background-color 0.2s;
        box-sizing: border-box;
        gap: 6px;
    }

    .sort-link:hover {
        background-color: rgba(255, 255, 255, 0.3);
        color: #000;
    }

    .sort-arrows {
        display: flex;
        flex-direction: column;
        line-height: 1;
        margin-left: 4px;
    }

    .sort-arrows .arrow {
        font-size: 10px;
        color: #ccc;
        transition: color 0.2s;
    }

    .sort-arrows .arrow.active {
        color: #2381c9;
        font-weight: bold;
    }

    .sort-link:hover .sort-arrows .arrow {
        color: #999;
    }

    .sort-link:hover .sort-arrows .arrow.active {
        color: #1a5a8a;
    }

    .talents-cell {
        min-width: 120px;
        max-width: 180px;
    }

    .talent-badge {
        display: inline-block;
        background-color: #6c757d;
        color: white;
        padding: 2px 6px;
        border-radius: 10px;
        font-size: 1rem;
        margin: 1px;
    }

    .talent-cache {
        background-color: #6c757d;
    }

    @media (min-width: 901px) {
        .navbar-pokedex {
            display: flex;
            align-items: center;
            gap: 2em;
        }
        .navbar-top {
            display: contents; 
        }
        .logo-pokedex {
            height: 46px;
            width: auto;
            margin-left: 0.4em;
        }
        .form-pokedex-filters {
            display: flex;
            align-items: center;
            gap: 1.2em;
            flex: 1;
        }
        .mobile-toggle {
            display: none;
        }
    }
    @media (max-width: 900px) {
        .navbar-top {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 1em;
        }
        .logo-pokedex {
            height: 46px;
            width: auto;
            margin-left: 0.4em;
        }
        .form-pokedex-filters {
            flex-direction: column;
            max-height: 0;
            overflow: hidden;
            padding-top: 0;
            margin-top: 0;
            width: 100%;
            display: flex;
            gap: 0.8em;
            transition: max-height 0.4s ease, padding 0.3s ease;
        }
        .navbar-pokedex.show-filters .form-pokedex-filters {
            max-height: 1000px;
            padding-top: 1em;
        }
        .form-pokedex-filters > * {
            width: 100%;
        }
        .mobile-toggle {
            display: block;
            color: black;
            font-weight: bold;
            border: 1px solid black;
            background: transparent;
            padding: 0.4em 0.8em;
            border-radius: 6px;
            cursor: pointer;
        }
        .mobile-toggle:hover {
            background-color: #fff;
            border-color: #000;
            transform: scale(1.1);
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);
        }
    }
    .form-pokedex-filters select,
    .form-pokedex-filters input {
        border-radius: 7px;
        border: 1px solid #4697ec;
        padding: 5px 8px;
        background: #fff;
        color: #234;
        font-size: 1em;
        min-width: 90px;
    }
    .form-pokedex-filters button {
        border: 1px solid #c00;
        color: #fff;
        background: #db3133;
        font-weight: 600;
        border-radius: 7px;
        padding: 6px 13px;
        cursor: pointer;
        transition: background 0.18s;
        min-width: 92px;
    }
    .form-pokedex-filters button:hover { 
        background: #ba2225; 
    }
    @media (max-width: 520px) {
        .logo-pokedex { 
            height: 34px; 
        }
        
        .form-pokedex-filters select,
        .form-pokedex-filters input,
        .form-pokedex-filters button { 
            font-size: 0.93em; 
        }
    }
    @media (max-width: 768px) {
    /* Masquer les en-têtes */
    th:nth-child(1), /* Colonne Génération */
    th:nth-child(6) { /* Colonne Talents */
        display: none;
    }
    
    /* Masquer les cellules correspondantes */
    td:nth-child(1), /* Cellules Génération */
    td:nth-child(6) { /* Cellules Talents */
        display: none;
    }
}
</style>

<nav class="navbar-pokedex">
    <div class="navbar-top">
        <img
            src="{{ asset('logo-pokedex.png') }}"
            class="logo-pokedex"
            alt="Pokédex logo"
        >
        
        <button 
            class="mobile-toggle" 
            type="button" 
            onclick="document.querySelector('.navbar-pokedex').classList.toggle('show-filters')">
            ☰ Menu
        </button>
    </div>

    <form method="get" class="form-pokedex-filters">
        <select name="generation" onchange="this.form.submit()">
            <option value="">Toutes les générations</option>
            {% for gen in generations %}
                <option value="{{ gen }}" 
                        {% if current_generation is not empty and current_generation == gen %}selected="selected"{% endif %}>
                    {% if gen == 98 %}
                        MÉGA-ÉVOLUTION
                    {% elseif gen == 99 %}
                        GIGAMAX
                    {% else %}
                        Génération {{ gen }}
                    {% endif %}
                </option>
            {% endfor %}
        </select>
        
        <select name="type" onchange="this.form.submit()">
            <option value="">Tous types</option>
            {% for t in types %}
                <option value="{{ t.id }}" {% if t.id == current_type %}selected{% endif %}>{{ t.nom }}</option>
            {% endfor %}
        </select>
        
        <input type="text" name="q" placeholder="Nom ou numéro..." value="{{ current_search }}">
        <button type="submit">Rechercher</button>
        <button type="button" onclick="window.location='{{ path('pokedex') }}'">Réinitialiser</button>
    </form>
</nav>

<table class="pokedex">
    <thead>
        <tr>
            <th class="sortable">
                <a href="{{ path('pokedex', app.request.query.all|merge({
                    'sort': 'generation', 
                    'order': order == 'asc' and sort == 'generation' ? 'desc' : 'asc', 
                    'page': 1
                    })) }}" class="sort-link">
                        Génération
                    <span class="sort-arrows">
                        <span class="arrow {{ (sort == 'generation' and order == 'asc') ? 'active' : '' }}">▲</span>
                        <span class="arrow {{ (sort == 'generation' and order == 'desc') ? 'active' : '' }}">▼</span>
                    </span>
                </a>
            </th>
           <th class="sortable">
                <a href="{{ path('pokedex', app.request.query.all|merge({
                    'sort': 'numero', 
                    'order': order == 'asc' and sort == 'numero' ? 'desc' : 'asc', 
                    'page': 1
                    })) }}" class="sort-link">
                        N°
                    <span class="sort-arrows">
                        <span class="arrow {{ (sort == 'numero' and order == 'asc') ? 'active' : '' }}">▲</span>
                        <span class="arrow {{ (sort == 'numero' and order == 'desc') ? 'active' : '' }}">▼</span>
                    </span>
                </a>
            </th>
            <th>Image</th>
            <th class="sortable">
                <a href="{{ path('pokedex', app.request.query.all|merge({
                    'sort': 'nom', 
                    'order': order == 'asc' and sort == 'nom' ? 'desc' : 'asc', 
                    'page': 1
                    })) }}" class="sort-link">
                        Nom
                    <span class="sort-arrows">
                        <span class="arrow {{ (sort == 'nom' and order == 'asc') ? 'active' : '' }}">▲</span>
                        <span class="arrow {{ (sort == 'nom' and order == 'desc') ? 'active' : '' }}">▼</span>
                    </span>
                </a>
            </th>
            <th>Types</th>
            <th class="sortable">
                <a href="{{ path('pokedex', app.request.query.all|merge({
                    'sort': 'talents', 
                    'order': order == 'asc' and sort == 'talents' ? 'desc' : 'asc', 
                    'page': 1
                    })) }}" class="sort-link">
                        Talents
                    <span class="sort-arrows">
                        <span class="arrow {{ (sort == 'talents' and order == 'asc') ? 'active' : '' }}">▲</span>
                        <span class="arrow {{ (sort == 'talents' and order == 'desc') ? 'active' : '' }}">▼</span>
                    </span>
                </a>
            </th>
            <th>Évolution</th>
        </tr>
    </thead>
    <tbody>
        {% for p in pokemons %}
            <tr data-pokemon-id="{{ p.id }}">
                <td>
                    {% if p.generation == 98 %}
                        MÉGA-ÉVOLUTION
                    {% elseif p.generation == 99 %}
                        GIGAMAX
                    {% else %}
                        {{ p.generation }}
                    {% endif %}
                </td>
                <td>{{ p.numeroNational }}</td>
                <td>
                    <img
                        src="{{ p.imageUrl }}"
                        alt="{{ p.nom }}"
                        class="pokemon-image"
                        onerror="this.onerror=null; this.src='https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/0.png';"
                    >
                </td>
                <td>{{ p.nom }}</td>
                <td class="type-cell">
                    <span class="type-column-inner">
                    {% for pt in p.types %}
                        <img src="{{ pt.type.iconeUrl }}" alt="{{ pt.type.nom }}" title="{{ pt.type.nom }}" class="type-icon">
                    {% endfor %}
                    </span>
                </td>
                <td class="talents-cell">
                    {% set talents = p.pokemonTalent|default([]) %}
                    {% if talents|length > 0 %}
                        {% for pokemonTalent in talents %}
                            <span class="talent-badge{% if pokemonTalent.isHidden %} talent-cache{% endif %}" 
                                  title="{{ pokemonTalent.talent.description|default('') }}">
                                {{ pokemonTalent.talent.nom }}
                                {% if pokemonTalent.isHidden %} (caché){% endif %}
                            </span>
                            {% if not loop.last %}<br>{% endif %}
                        {% endfor %}
                    {% else %}
                        <span class="text-muted">-</span>
                    {% endif %}
                </td>
                <td class="evolution-cell">
                    {% set evolutions = p.evolutionsDepuis|default([]) %}
                    {% if evolutions|length > 0 %}
                        {% for ev in evolutions %}
                            <div class="evolution-content">
                                {% if ev.pokemonFin and ev.pokemonFin.imageUrl %}
                                    <img class="pokemon-image"
                                        src="{{ ev.pokemonFin.imageUrl }}" 
                                        alt="{{ ev.pokemonFin.nom }}" 
                                        onerror="this.style.display='none'">
                                {% endif %}
                                {% if ev.pokemonFin %}
                                    <span>{{ ev.pokemonFin.nom }}</span>
                                {% endif %}
                                {% if ev.condition %}
                                    <span>({{ ev.condition }})</span>
                                {% endif %}
                            </div>
                        {% endfor %}
                    {% else %}
                        ✖
                    {% endif %}
                </td>
            </tr>
        {% else %}
            <tr><td colspan="6">Aucun résultat</td></tr>
        {% endfor %}
    </tbody>
</table>

<div class="pagination-container">
    <div class="limit-selector">
        <label for="limit-select">Afficher :</label>
        <select id="limit-select" onchange="changeLimit(this.value)">
            <option value="25" {% if current_limit == 25 %}selected{% endif %}>25 par page</option>
            <option value="50" {% if current_limit == 50 %}selected{% endif %}>50 par page</option>
            <option value="75" {% if current_limit == 75 %}selected{% endif %}>75 par page</option>
            <option value="100" {% if current_limit == 100 %}selected{% endif %}>100 par page</option>
            <option value="all" {% if current_limit == 'all' %}selected{% endif %}>Tous</option>
        </select>
    </div>

    {% if current_limit != 'all' %}
        <div class="pagination-info">
            Affichage de {{ ((currentPage - 1) * current_limit + 1) }} à {{ min(currentPage * current_limit, totalPokemons) }} sur {{ totalPokemons }} Pokémon
        </div>

        {% if totalPages > 1 %}
            <div class="pagination-nav">
                {% if currentPage > 1 %}
                    <a href="{{ path('pokedex', {
                        generation: current_generation, 
                        type: current_type, 
                        q: current_search, 
                        limit: current_limit, 
                        sort: sort, 
                        order: order, 
                        page: 1
                    }) }}">« Première</a>
                    <a href="{{ path('pokedex', {
                        generation: current_generation, 
                        type: current_type, 
                        q: current_search, 
                        limit: current_limit, 
                        sort: sort, 
                        order: order, 
                        page: currentPage - 1
                    }) }}">‹ Précédente</a>
                {% endif %}

                {% for i in max(1, currentPage - 2)..min(totalPages, currentPage + 2) %}
                    {% if i == currentPage %}
                        <span class="current">{{ i }}</span>
                    {% else %}
                        <a href="{{ path('pokedex', {
                            generation: current_generation, 
                            type: current_type, 
                            q: current_search, 
                            limit: current_limit, 
                            sort: sort, 
                            order: order, 
                            page: i
                        }) }}">{{ i }}</a>
                    {% endif %}
                {% endfor %}

                {% if currentPage < totalPages %}
                    <a href="{{ path('pokedex', {
                        generation: current_generation, 
                        type: current_type, 
                        q: current_search, 
                        limit: current_limit, 
                        sort: sort, 
                        order: order, 
                        page: currentPage + 1
                    }) }}">Suivante ›</a>
                    <a href="{{ path('pokedex', {
                        generation: current_generation, 
                        type: current_type, 
                        q: current_search, 
                        limit: current_limit, 
                        sort: sort, 
                        order: order, 
                        page: totalPages
                    }) }}">Dernière »</a>
                {% endif %}
            </div>
        {% endif %}
    {% else %}
        <div class="pagination-info">
            Affichage de tous les {{ totalPokemons }} Pokémon
        </div>
    {% endif %}
</div>

{% include 'pokedex/popup.html.twig' %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/pokemon-popup.js') }}"></script>

    <script>
    function changeLimit(limit) {
        const url = new URL(window.location);
        url.searchParams.set('limit', limit);
        url.searchParams.set('page', '1');
        window.location.href = url.toString();
    }
    </script>
{% endblock %}
