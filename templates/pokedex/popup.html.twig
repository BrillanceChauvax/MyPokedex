<div id="pokemon-popup-overlay" class="popup-overlay" style="display: none;">
    <div class="popup-container">
        <button class="popup-close" onclick="closePokemonPopup()">&times;</button>
        <div class="popup-content">
            
            <div class="popup-body">
                <div class="pokemon-main-info">
                    <div class="pokemon-image">
                        <img id="popup-pokemon-image" src="" alt="Pokémon" />
                    </div>
                    
                    <div class="pokemon-details">
                        <h2 id="popup-pokemon-name"></h2>
                        <div class="pokemon-meta">
                            <span class="generation">
                                <span id="popup-pokemon-generation-label">Génération</span> 
                                <span id="popup-pokemon-generation"></span>
                            </span>
                            <span class="pokedex-number">#<span id="popup-pokemon-number"></span></span>
                        </div>
                        
                        <div class="pokemon-extra-info">
                            <span class="pokemon-size-weight">
                                <span><strong>Taille:</strong> <span id="popup-pokemon-height"></span></span>
                                <span><strong>Poids:</strong> <span id="popup-pokemon-weight"></span></span>
                            </span>
                        </div>

                        <div class="pokemon-types" id="popup-pokemon-types">
                            <!-- Types seront ajoutés dynamiquement -->
                        </div>

                        <div class="section-title">Description</div>
                        <div id="popup-pokemon-description" class="pokemon-description">
                            <!-- Description du Pokémon sera ajoutée dynamiquement -->
                        </div>

                        <div class="section-title">Talents</div>
                        <div id="popup-pokemon-talents" class="pokemon-talents">
                            <!-- Les talents seront insérés ici dynamiquement -->
                        </div>

                        <div class="section-title">Cri du Pokémon</div>
                        <div id="popup-pokemon-cry" class="pokemon-cri">
                            <!-- Audio cri Pokémon sera ajouté dynamiquement-->
                        </div>

                        <div class="section-title">Statistiques</div>
                        <div id="popup-pokemon-stats">
                            <!-- Stats tableau horizontal style graphique -->
                        </div>
                    </div>
                </div>

                <div class="evolution-section" id="evolution-section" style="display: none;">
                    <div class="section-title">Chaîne d’évolution</div>
                    <div class="evolution-chain" id="evolution-chain">
                        <!-- Chaîne d'évolution sera ajoutée dynamiquement -->
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
